<div id="cookie-consent" class="cookie-consent" hidden>
  <div class="cookie-consent__content">
    <div class="cookie-consent__text">
      Używamy plików cookie do analityki (np. GTM, Contentsquare). 
      Możesz zaakceptować lub odrzucić. Twoją decyzję zapiszemy w ciasteczku.
    </div>
    <div class="cookie-consent__actions">
      <button id="cookie-accept" class="cookie-btn cookie-btn--accept">Akceptuję</button>
      <button id="cookie-reject" class="cookie-btn cookie-btn--reject">Odrzucam</button>
    </div>
  </div>
</div>

<script>
  (function(){
    function setCookie(name, value, days) {
      const d = new Date();
      d.setTime(d.getTime() + (days*24*60*60*1000));
      const expires = "expires=" + d.toUTCString();
      document.cookie = name + "=" + value + ";" + expires + ";path=/";
    }

    function getCookie(name) {
      const value = `; ${document.cookie}`;
      const parts = value.split(`; ${name}=`);
      if (parts.length === 2) return parts.pop().split(';').shift();
      return null;
    }

    const banner = document.getElementById('cookie-consent');
    const acceptBtn = document.getElementById('cookie-accept');
    const rejectBtn = document.getElementById('cookie-reject');

    const consent = getCookie('cs_consent');
    if (!consent) {
      banner.hidden = false;
    }

    acceptBtn?.addEventListener('click', function() {
      setCookie('cs_consent', 'accepted', 365);
      banner.remove();
      if (window.__loadConsentTrackers) {
        window.__loadConsentTrackers();
      }
    });

    rejectBtn?.addEventListener('click', function() {
      setCookie('cs_consent', 'rejected', 365);
      banner.remove();
    });
  })();
</script>

