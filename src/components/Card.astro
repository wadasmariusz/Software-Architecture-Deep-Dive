---
export interface Props {
    p: { name: string; role?: string; img: string; link?: string };
    className?: string;
}

const { p, className = "" } = Astro.props;
---

<a href={p.link ?? "#"} class={`group block ${className}`} aria-label={p.name}>
    <div class="relative overflow-hidden rounded-2xl shadow-xl ring-1 ring-black/5">
        <img
                src={p.img}
                alt={p.name}
                class="aspect-[4/5] w-full object-cover transition group-hover:scale-[1.03]"
                loading="lazy"
        />
        <div class="absolute inset-x-3 -bottom-3 translate-y-1/2 rounded-xl bg-white/80 backdrop-blur px-3 py-2 shadow ring-1 ring-black/5">
            <p class="font-semibold leading-tight">{p.name}</p>
            {p.role && <p class="text-sm opacity-70">{p.role}</p>}
        </div>
    </div>
</a>